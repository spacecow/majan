<%= title @day.date %>

<%= render 'bookings', day:@day %>

<%= form_tag new_booking_path, :method => :get do %>
  <%= hidden_field_tag :date, @day.date %>
  <%= submit_tag t('helpers.submit.reserve'), :class => :submit %>
<% end %>

<%= button_to t('helpers.submit.calendar'), bookings_path, {:method => :get, :class => :cancel} %>
